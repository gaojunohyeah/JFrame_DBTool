<?xml version="1.0" encoding="UTF-8"?>
<table name="useritem" comment="用户道具表" defaultKey="false">
    <column name="uid" type="number" length="20" comment="唯一ID"
            notNull="true" unique="true">0</column>
    <column name="platid" type="string" length="30" comment="平台ID"
            notNull="true"></column>
    <!-- 格式 {itemid1=num1,itemid2=num2,...}-->
    <column name="item" type="table" length="4800" comment="永久物品">{}</column>
    <!-- 格式
        {
            itemid={
                1 = {
                    num = xx,
                    time = xxx,
                },
                2 = {
                    num = xx,
                    time = xxx,
                },
                ...
            },
        }
    -->
    <column name="timeItem" type="table" length="2000" comment="限时物品">{}</column>
</table>