<?xml version="1.0" encoding="UTF-8"?>
<table name="usertank" comment="用户坦克信息表">
    <column name="uid" type="number" length="20" comment="角色唯一ID"
            notNull="true">0</column>
    <column name="platid" type="string" length="30" comment="平台ID"
            notNull="true">0</column>
    <column name="beanId" type="number" length="10" comment="配置ID"
            notNull="true">0</column>
    <column name="level" type="number" length="10" comment="等级">1</column>
    <column name="star" type="number" length="10" comment="星级(改造)">0</column>
    <column name="hp" type="number" length="10" comment="当前血量">0</column>
    <column name="hpFull" type="number" length="1" comment="血量是否满(1是 2否)">0</column>
    <column name="bindHero" type="number" length="20" comment="绑定的将领ID">0</column>
    <column name="bindPart" type="table" length="130" comment="绑定的配件ID">{}</column>
    <column name="state" type="number" length="5" comment="状态(空闲，进阶，出征中等)">1</column>
</table>